@model HCompensation.Models.ViewModels.CarOwnerVM;

<form method="post" asp-action="AddCarOwner" enctype="multipart/form-data">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-success pl-3">Car Owners' Compensation</h2>
        </div>
        <div class="row">
            <div class="col-md-3">

            </div>
            <div class="col-md-6">
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="FullName"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="CarDocument"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="CarDocument" class="form-control" />
                        <span asp-validation-for="CarDocument" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="PurchaseReceipt"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="PurchaseReceipt" class="form-control" />
                        <span asp-validation-for="PurchaseReceipt" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="LastSupplyDetails"></label>
                    </div>
                    <div class="col-md-8">
                        <textarea rows="5" asp-for="LastSupplyDetails" class="form-control"></textarea>
                        <span asp-validation-for="LastSupplyDetails" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6 mb-1">
                        <input type="submit" name="submit" value="Submit" class="btn btn-success w-100" />
                    </div>
                    <div class="col-md-6 mb-1">
                        <a asp-action="Index" class="btn btn-info w-100">Back</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">

            </div>
        </div>
    </div>
</form>

